<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothWrap" >

    <FrameLayout
        android:id="@+id/battery_container"
        android:layout_width="wrap_content"
        android:layout_height="100dp" >

        <LinearLayout
            style="@style/layoutBothWrap"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/battery_power"
                style="@style/layoutBothWrap"
                android:background="@drawable/battery_full" />
        </LinearLayout>

        <LinearLayout
            style="@style/layoutBothWrap"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/battery_border"
                style="@style/layoutBothWrap"
                android:background="@drawable/battery_nomal" />
        </LinearLayout>

        <LinearLayout
            style="@style/layoutBothWrap"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/battery_b"
                style="@style/layoutBothWrap"
                android:background="@drawable/battery_empty" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_gravity="center"
        style="@style/layoutBothMatch"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/battery_charging"
            style="@style/layoutBothWrap"
            android:background="@drawable/bty_charging"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_power"
            style="@style/power_p" />
    </LinearLayout>

</FrameLayout>