<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothMatch"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/menu_all"
        style="@style/wMatchhWrap"
        android:layout_weight="1"
        android:background="@drawable/btn_normal"
        android:text="@string/app_all"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/menu_nosys"
        style="@style/wMatchhWrap"
        android:layout_weight="1"
        android:background="@drawable/btn_normal"
        android:text="@string/app_nosys"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/menu_sys"
        style="@style/wMatchhWrap"
        android:layout_weight="1"
        android:background="@drawable/btn_normal"
        android:text="@string/app_sys"
        android:textColor="@android:color/white" />

</LinearLayout>