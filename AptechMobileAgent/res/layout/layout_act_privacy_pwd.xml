<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothMatch"
    android:background="@drawable/bg_1"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/layoutBothMatch"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/privacy_pwd_pkgname"
            style="@style/privacy_pw_text" />

        <ImageView
            android:id="@+id/privacy_pwd_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter" >
        </ImageView>

        <TextView
            style="@style/privacy_pw_text"
            android:layout_marginTop="20dp"
            android:text="@string/privacy_pwd_tips" />

        <EditText
            android:id="@+id/privacy_pwd_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/input_unlock_pw" />

        <Button
            android:id="@+id/privacy_pwd_unlock"
            style="@style/layoutBothWrap"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_btn"
            android:text="@string/unlock"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/privacy_pwd_modify"
            style="@style/layoutBothWrap"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_btn"
            android:text="@string/modify_pw"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>