<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_header_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/view_header_wrapbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/view_header_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dialog_delete_button_selector"
            android:src="@raw/previous" />

        <ImageButton
            android:id="@+id/view_header_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/dialog_delete_button_selector"
            android:src="@raw/next" />

        <TextView
            android:id="@+id/view_header_pageinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/view_header_next" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/view_header_wrapbtn"
        android:background="@color/dark_gray" />

</RelativeLayout>