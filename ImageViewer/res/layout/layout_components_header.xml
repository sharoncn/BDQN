<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/header_main_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@raw/main_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/header_main_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@raw/ic_cab_done" />

        <TextView
            android:id="@+id/header_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="@string/nopic"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/header_main_dropdown"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@raw/dropdown_normal" />
    </LinearLayout>

</LinearLayout>