<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/dialog_info_title"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/dialog_title" />
	<ImageView 
	    android:contentDescription="@string/separator_dialog"
        style="@style/dialog_margin_buttom"
	    android:layout_width="240dp"
	    android:layout_height="2dp"
	    android:background="@color/skyblue"/>
	<TextView 
        android:id="@+id/dialog_info_name" 
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/dialog_content" />
	<ImageView 
	    android:contentDescription="@string/separator_dialog"
	    style="@style/dialog_margin_buttom"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray" />
	<TextView 
        android:id="@+id/dialog_info_path"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/dialog_content" />
	<ImageView 
	    android:contentDescription="@string/separator_dialog"
	    style="@style/dialog_margin_buttom"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<TextView 
        android:id="@+id/dialog_info_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/dialog_content" />
	<ImageView 
	    android:contentDescription="@string/separator_dialog"
	    style="@style/dialog_margin_buttom"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
	<TextView 
        android:id="@+id/dialog_info_size"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/dialog_content" />
</LinearLayout>