<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothMatch"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.HasButtonHeader
        android:id="@+id/modify_header"
        style="@style/wMatchhWrap"
        android:background="@drawable/search_bg" />

    <ScrollView style="@style/layoutBothMatch" >

        <LinearLayout
            style="@style/wMatchhWrap"
            android:orientation="vertical" >

            <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.ImageClickablePanel
                android:id="@+id/modify_panel_icon"
                style="@style/wMatchhWrap"
                android:layout_margin="10dp" />

            <LinearLayout
                style="@style/wMatchhWrap"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/modify_gender_tv"
                    style="@style/panel_content"
                    android:text="@string/genderis" />

                <RadioGroup
                    android:id="@+id/modify_group"
                    style="@style/wMatchhWrap"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/modify_rb_m"
                        style="@style/panel_content"
                        android:button="@drawable/gender_rb_selector"
                        android:checked="true"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/modify_rb_f"
                        style="@style/panel_content"
                        android:layout_marginLeft="50dp"
                        android:button="@drawable/gender_rb_selector"
                        android:text="@string/famale" />
                </RadioGroup>
            </LinearLayout>

            <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.EditablePanel
                android:id="@+id/modify_panel_editinfo"
                style="@style/wMatchhWrap"
                android:layout_margin="10dp" />

            <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.CitySelectPanel
                android:id="@+id/modify_panel_city"
                style="@style/wMatchhWrap"
                android:layout_margin="10dp" />

            <LinearLayout
                style="@style/wMatchhWrap"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/modify_btn_submit"
                    style="@style/layoutBothWrap"
                    android:background="@drawable/aboutme_btn_edit"
                    android:text="@string/submit" />

                <Button
                    android:id="@+id/modify_btn_cancel"
                    style="@style/layoutBothWrap"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/aboutme_btn_edit"
                    android:text="@string/cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>