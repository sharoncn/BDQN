<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothMatch"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.ButtonHeader
        android:id="@+id/newstatus_header"
        style="@style/wMatchhWrap"
        android:background="@drawable/search_bg" />

    <EditText
        android:id="@+id/newstatus_content"
        style="@style/layoutBothMatch"
        android:layout_weight="1"
        android:background="@drawable/edit_selector"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <LinearLayout
        style="@style/wMatchhWrap"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/newstatus_addr"
            style="@style/layoutBothWrap" />

        <ImageView
            android:id="@+id/newstatus_pic"
            style="@style/layoutBothWrap" />

        <RelativeLayout
            style="@style/layoutBothMatch"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/newstatus_contentlen"
                style="@style/layoutBothWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>