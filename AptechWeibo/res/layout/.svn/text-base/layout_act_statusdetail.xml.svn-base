<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutBothMatch"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.HasButtonHeader
        android:id="@+id/detail_header"
        style="@style/wMatchhWrap"
        android:layout_gravity="top"
        android:background="@drawable/search_bg" />

    <LinearLayout
        style="@style/layoutBothMatch"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/layoutBothWrap"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/detail_username"
                style="@style/layoutBothWrap"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider" />

        <ScrollView
            style="@style/layoutBothMatch"
            android:layout_weight="1" >

            <LinearLayout
                style="@style/wMatchhWrap"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detail_content"
                    style="@style/text_black16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <ImageView
                    android:id="@+id/detail_pic"
                    style="@style/wMatchhWrap"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </ScrollView>

        <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.DetailPanel
            android:id="@+id/detail_panel"
            style="@style/wMatchhWrap"
            android:layout_margin="10dp"
            android:layout_weight="0" />
    </LinearLayout>

    <rjfsdo.sharoncn.android.BDQN.AptechWeibo.Components.DefaultMenu
        android:id="@+id/detail_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

</LinearLayout>