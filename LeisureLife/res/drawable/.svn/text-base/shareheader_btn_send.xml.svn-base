<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- 没有焦点时的背景图片--> 
  	<item state_focused="false" android:state_pressed="false" android:drawable="@drawable/send" /> 
  	<!-- 单击时的背景图片--> 
  	<item android:state_pressed="true" android:drawable="@drawable/send" /> 
	<!-- 获取到焦点时的背景图片--> 
  	<item android:state_focused="true" android:drawable="@drawable/send" /> 
</selector>