<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgr"
    android:orientation="vertical" >

    <rjfsdo.sharoncn.android.BDQN.LeisureLife.Components.DefaultHeader
        android:id="@+id/show_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/show_detail_list"
        android:cacheColorHint="@android:color/transparent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

    <rjfsdo.sharoncn.android.BDQN.LeisureLife.Components.DefaultMenu
        android:id="@+id/show_detail_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>