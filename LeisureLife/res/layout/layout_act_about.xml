<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgr"
    android:orientation="vertical" >

    <rjfsdo.sharoncn.android.BDQN.LeisureLife.Components.DefaultHeader
        android:id="@+id/about_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/content_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/about_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="live@休闲生活" />

        <ImageView
            style="@style/about_img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_white" />

        <TextView
            style="@style/about_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网址" />

        <TextView
            style="@style/about_tv_item_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.bdqn.cn" />

        <ImageView
            style="@style/about_img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_white" />

        <TextView
            style="@style/about_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内测QQ群" />

        <TextView
            style="@style/about_tv_item_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="88888888" />

        <ImageView
            style="@style/about_img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_white" />

        <TextView
            style="@style/about_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电子邮箱" />

        <TextView
            style="@style/about_tv_item_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.xiuxianshenghuo@bdqn.cn" />

        <ImageView
            style="@style/about_img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_white" />

        <TextView
            style="@style/about_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本号" />

        <TextView
            android:id="@+id/version_name"
            style="@style/about_tv_item_italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            style="@style/about_img"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:text="live@休闲生活"
            android:textColor="@android:color/transparent"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>