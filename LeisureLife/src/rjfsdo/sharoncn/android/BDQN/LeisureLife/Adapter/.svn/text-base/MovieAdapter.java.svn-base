package rjfsdo.sharoncn.android.BDQN.LeisureLife.Adapter;

import java.util.List;

import android.content.Context;
import android.widget.TextView;

/**
 * 电影列表适配器
 * @author sharoncn
 *
 */
public class MovieAdapter extends DefaultAdapter {

	//private static final String TAG = "MovieAdapter";

	public MovieAdapter(Context context, List<Object> data) {
		super(context, data);
	}

	@Override
	public void setupText(int index, TextView textView) {
		if(index == 0){
			textView.setTextSize(16);
		}
		textView.setSingleLine();
	}
	
}
