<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--默认时背景颜色-->
<item android:drawable="@drawable/listitem_bg_1"></item>
<!--没有焦点时的背景图片-->
<item android:state_window_focused="false" android:drawable="@drawable/listitem_bg_1"></item>
<!--非触摸模式下获得焦点并单击时的背景图片-->
<item android:state_window_focused="true" android:state_pressed="true" android:drawable="@drawable/listitem_bg_2"></item>
<!--触摸模式下单击时的背景图片-->
<item android:state_window_focused="false" android:state_pressed="true" android:drawable="@drawable/listitem_bg_2"></item>
<!--选中时的图片背景-->
<item android:state_window_focused="false" android:state_pressed="true" android:drawable="@drawable/listitem_bg_2"></item>
<!--获得焦点时的图片背景-->
<item android:state_window_focused="false" android:state_pressed="true" android:drawable="@drawable/listitem_bg_2"></item>
</selector>


