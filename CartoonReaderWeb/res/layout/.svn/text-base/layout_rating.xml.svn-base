<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/rate_grade_tip" />
    <RatingBar 
        android:id="@+id/rating_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:max="5" />
	<TextView 
	    android:id="@+id/rating_tv_howmany"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	  	android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
	    android:orientation="horizontal"
	    android:gravity="center" >
	    <Button 
	        android:id="@+id/rating_btn_submit"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:text="@string/submit" />
	    <Button 
	        android:id="@+id/rating_btn_goback"
	        android:layout_marginLeft="20dp"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:text="@string/picGoback" />
	    <Button 
	        android:id="@+id/rating_btn_gohome"
	        android:layout_marginLeft="20dp"
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:text="@string/rate_home" />
	</LinearLayout>
</LinearLayout>