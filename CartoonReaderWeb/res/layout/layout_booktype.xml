<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <rjfsdo.sharoncn.android.CartoonReaderWeb.Activities.Components.ScrollableTextView
        android:id="@+id/booktype_atv_news"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray" />
    <rjfsdo.sharoncn.android.CartoonReaderWeb.Activities.Components.BasicCanvas
		android:id="@+id/booktype_canvas"
		android:background="@android:color/white"
		android:focusable="true"
		android:addStatesFromChildren="true"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
    <rjfsdo.sharoncn.android.CartoonReaderWeb.Activities.Components.BasicCanvas 
	    android:id="@+id/booktype_detail_canvas"
		android:background="@android:color/white"
		android:focusable="true"
		android:addStatesFromChildren="true"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
</LinearLayout>